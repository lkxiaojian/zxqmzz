<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.activity.login.LoginActivity">

    <FrameLayout
        android:id="@+id/ll_up_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_login_yanzheng"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rigest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="45dp"
            android:layout_marginRight="45dp"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="18sp"

            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="5dp"
                android:text="登录"
                android:textColor="@color/gray_6"
                android:textSize="35sp" />


            <EditText
                android:id="@+id/et_phone_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/et_bg"
                android:focusable="auto"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:textColorHint="#ffc1c1c1"
                android:textCursorDrawable="@drawable/edit_cursor_color"
                android:textSize="15sp"

                />

            <LinearLayout
                android:id="@+id/ll_password_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                >


                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="34dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/et_bg"
                    android:focusable="auto"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:textColorHint="#ffc1c1c1"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/tv_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="40dp"
                    android:text="忘记密码？"
                    android:textColor="#ffc1c1c1"
                    android:textSize="13sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_code_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="247dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="34dp"
                    android:background="@drawable/et_bg"
                    android:hint="请输入验证码"
                    android:inputType="textPassword"
                    android:textColorHint="#ffc1c1c1"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:textSize="15sp" />


                <Button
                    android:id="@+id/bt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:text="获取验证码"
                    android:layout_gravity="center"
                    android:textColor="#ffc1c1c1"
                    android:background="@null"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="3dp">

            <Button
                android:id="@+id/bt_login"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@mipmap/btn_start"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="13sp"

                />

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bt_login"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:text="手机验证码登录"
                android:textColor="#FF9234"
                android:textSize="13sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>